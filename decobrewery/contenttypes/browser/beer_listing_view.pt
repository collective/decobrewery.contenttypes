<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="plone">

    <body>
        <div tal:define="results context" tal:repeat="item results">
            <tal:block tal:define="item_url item/getURL;
                                   item_title_or_id item/title_or_id;
                                   item_description item/Description;">

                <div class="tileItem"
                     tal:define="item_object item/getObject;">

                    <a href="#"
                       tal:condition="exists:item_object/image_thumb"
                       tal:attributes="href item_url">
                        <img src="" alt=""
                             tal:replace="structure python: path('nocall:item_object/tag')(scale='thumb', css_class='tileImage')" />
                    </a>

                    <h2 class="tileHeadline"
                        metal:define-macro="listitem">

                        <a href="#"
                           class="summary url"
                           tal:attributes="href item_url"
                           tal:content="item_title_or_id">
                            Item Title
                        </a>

                    </h2>

                    <p class="tileBody" tal:condition="item_description">
                        <span class="description" tal:content="item_description">
                            description
                        </span>
                    </p>

                </div>
            </tal:block>
        </div>
    </body>

</html>
